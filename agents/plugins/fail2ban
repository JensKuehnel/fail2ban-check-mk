if command -v fail2ban-client > /dev/null 2>&1; then
	echo "<<<fail2ban:sep(58)>>>"
	fail2ban-client status |
		awk -F: '$1 ~ /Jail list$/ { gsub(/,/, "", $2); print $2}' |
		xargs -n1 fail2ban-client status
fi
